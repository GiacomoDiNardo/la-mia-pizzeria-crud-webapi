@model List<Ingredient>

<h1 class=" mb-4">Elenco Pizze</h1>

@if (Model.Count() == 0)
{
    <h2>Non sono presenti ingredienti nella lista</h2>
    <a class="btn btn-success mb-4" asp-area="" asp-controller="Ingredient" asp-action="Create">Aggiungi Ingrediente</a>
}
else
{
    <div>
        <a class="btn btn-success mb-4" asp-area="" asp-controller="Ingredient" asp-action="Create">Aggiungi Ingrediente</a>
    </div>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Azioni</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Ingredient ingredient in Model)
                {
                    <tr>
                        <td>@ingredient.Id</td>
                        <td>@ingredient.Name</td>
                    
                        @*<td>
                            <a href="@Url.Action("Update", "Pizza", new {id = pizza.PizzaId})" class="btn btn-success">Modifica</a>
                            <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.PizzaId" method="post">
                                <button type="submit" class="btn btn-danger">Cancella</button>
                            </form>
                        </td>*@

                    </tr>
                }

            </tbody>
        </table>
     </div>
}
